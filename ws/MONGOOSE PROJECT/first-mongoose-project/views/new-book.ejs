<!-- Latest compiled and minified CSS -->
<link
  rel="stylesheet"
  href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
/>
<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<section class="vh-200">
  <div class="container h-200">
    <form style="width: 26rem" action="/newbook" method="post">
      <!-- Name input -->
      <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="title">Title</label>
        <input type="text" id="title" class="form-control" name="title" />
      </div>

      <!-- Year input -->
      <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="year">Year</label>
        <input type="number" id="title" class="form-control" name="year" />
      </div>

      <!-- Genre input -->
      <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="genre">Genre</label>
        <br>
        <select class="form-select" aria-label="Default select example" name="genre">
          <option selected>Open this select menu</option>
          <% if (typeof genres != 'undefined' && genres.length > 0) {
          genres.forEach((genre) => { %>  
          <option value= <%= genre._id %> ><%= genre.label %></option>
          <% }); } %>
        </select>
        <br>
      <a href="/newgenre">
        My genre is not in the list...
      </a>
      </div>

      <!-- Author input -->
      <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="author">Author</label>
        <br>
        <select class="form-select" aria-label="Default select example" name="author">
          <option selected>Open this select menu</option>
          <% if (typeof authors != 'undefined' && authors.length > 0) {
          authors.forEach((author) => { %>  
          <option value= <%= author._id %> ><%= author.firstName +' '+ author.lastName %></option>
          <% }); } %>
        </select>
        <br>

      <a href="/newauthor">
        My author is not in the list...
      </a>
      </div>
      <br>
      

      <!-- Resume input -->
      <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="synopsis">Synopsis</label>
        <textarea
          class="form-control"
          id="synopsis"
          rows="4"
          name="synopsis"
        ></textarea>
      </div>

      <br />

      <!-- Submit button -->
      <button
        data-mdb-ripple-init
        type="submit"
        class="btn btn-primary btn-block mb-4"
      >
        Send
      </button>
    </form>
  </div>
</section>
